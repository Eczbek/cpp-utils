#pragma once


namespace util {
	enum class os {
		windows,
		mac,
		unix
	};

#if defined(_WIN32) || defined(_WIN64) || defined(__WIN32__) || defined(__WINDOWS__)
	constexpr auto thisOS = util::os::windows;
#elif defined(__APPLE__) || defined(__MACH__)
	constexpr auto thisOS = util::os::mac;
#elif defined(__unix__) || defined(__unix) || defined(unix)
	constexpr auto thisOS = util::os::unix;
#endif
}
